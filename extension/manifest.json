{
  "manifest_version": 3,
  "name": "QuickSum - Content Summarizer",
  "version": "1.0.0",
  "description": "Summarize YouTube videos, web pages, and any content with AI",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://yt.lemnoslife.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "QuickSum - AI Content Summarizer",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}
